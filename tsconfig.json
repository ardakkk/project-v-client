{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "outDir": "./build/js",
        "lib": ["dom", "es5", "scripthost", "es2015.promise"],
        "declaration": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "!node_modules/@types", "**/*.test.tsx"]
}
