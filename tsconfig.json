{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "types": ["node", "jest"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": ["node_modules"]
}