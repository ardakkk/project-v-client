{
    "compilerOptions": {
        "target": "es6",
        "module": "esnext",
        "outDir": "./build/js",
        "lib": ["es2017", "dom"],
        "declaration": false,
        "sourceMap": true,
        "noImplicitAny": true,
        "jsx": "react",
        "moduleResolution": "node",
        "typeRoots": ["./node_modules/@types"],
        "allowSyntheticDefaultImports": true,
        "types": ["@types/jest"]
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
